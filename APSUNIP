def determinaOpcao():
    while True:
        opcao = input('deseja Criptografar Ou Descriptografar?\n')
        if opcao in 'criptografar c descriptografar d'.split():
            return opcao
        else:
            print("digite 'c' ou 'd'.")
#chave 1 - 26        
def detChave():
    chave = 0
    while True:
        chave = int (input('digite o valor da chave (1/26)\n'))
        if 1 <= chave and chave <= 26:
            return chave
    
#traduzir    
def detmensagem(opcao, mensagem, chave):
    traduzido = ''
    if opcao [0] == 'd':
        chave *= -1
        
    #crpito e descripto
    for letra in mensagem:
        if letra.isalpha():
            num = ord(letra) #ASCII Chr()
            num += chave
            if letra.isupper():
                if num>ord('Z'):
                    num-=26
                elif num<ord('A'):
                    num+=26
            elif letra.islower():
                if num>ord('z'):
                    num-=26
                elif num<ord('a'):
                    num+=26
            traduzido += chr(num)        
        else:
            traduzido += letra
    return traduzido
def main():
    opcao = determinaOpcao ()
    mensagem = input('entre com sua mensagem:\n')
    chave = detChave()
    print('sua mensagem traduzida Ã©:')
    print(detmensagem(opcao, mensagem, chave))
    main() 
main()  
